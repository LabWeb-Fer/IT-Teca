{

  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "types": ["node", "vitest"],
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"]
}
